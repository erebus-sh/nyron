{
  "name": "@nyron/cli",
  "module": "index.ts",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "bin": {
    "nyron": "./dist/index.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:binary": "bun build src/index.ts --outfile dist/index.js --target bun",
    "build:esm": "tsdown --config build.config.ts",
    "cli": "bun run build && bun dist/index.js",
    "build": "bun run clean && bun run build:binary && bun run build:esm"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/semver": "^7.7.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "dotenv": "^17.2.3",
    "octokit": "^5.0.3",
    "semver": "^7.7.2",
    "simple-git": "^3.28.0",
    "tsdown": "^0.15.6"
  },
  "exports": {
    "./cli": "./dist/index.js",
    "./package.json": "./package.json",
    "./config": {
      "types": "./dist/core/config.d.ts",
      "import": "./dist/core/config.js",
      "require": "./dist/core/config.cjs"
    }
  }
}
