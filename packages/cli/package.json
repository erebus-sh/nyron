{
  "name": "@nyron/cli",
  "version": "0.4.3",
  "type": "module",
  "bin": {
    "nyron": "./dist/index.js"
  },
  "files": ["dist"],
  "scripts": {
    "clean": "rm -rf dist",
    "build:binary": "bun build src/index.ts --outfile dist/index.js --target bun",
    "build:esm": "tsdown --config build.config.ts",
    "copy:templates": "cp -r src/templates dist/templates",
    "build": "bun run clean && bun run build:binary && bun run build:esm && bun run copy:templates",
    "cli": "bun run build && bun dist/index.js",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "dotenv": "^17.2.3",
    "handlebars": "^4.7.8",
    "octokit": "^5.0.3",
    "probot": "^14.0.6",
    "semver": "^7.7.2",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/semver": "^7.7.1",
    "tsdown": "^0.15.6"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "exports": {
    "./package.json": "./package.json",
    "./config": {
      "types": "./dist/core/config.d.ts",
      "import": "./dist/core/config.js",
      "require": "./dist/core/config.cjs"
    },
    "./actions/bump": {
      "types": "./dist/actions/bump.d.ts",
      "import": "./dist/actions/bump.js",
      "require": "./dist/actions/bump.cjs"
    },
    "./actions/diff": {
      "types": "./dist/actions/diff.d.ts",
      "import": "./dist/actions/diff.js",
      "require": "./dist/actions/diff.cjs"
    },
    "./actions/init": {
      "types": "./dist/actions/init.d.ts",
      "import": "./dist/actions/init.js",
      "require": "./dist/actions/init.cjs"
    },
    "./actions/tag": {
      "types": "./dist/actions/tag.d.ts",
      "import": "./dist/actions/tag.js",
      "require": "./dist/actions/tag.cjs"
    },
    "./actions/types": {
      "types": "./dist/actions/types.d.ts",
      "import": "./dist/actions/types.js",
      "require": "./dist/actions/types.cjs"
    }
    ,
    "./github/commits": {
      "types": "./dist/github/commits.d.ts",
      "import": "./dist/github/commits.js",
      "require": "./dist/github/commits.cjs"
    },
    "./github/diff": {
      "types": "./dist/github/diff.d.ts",
      "import": "./dist/github/diff.js",
      "require": "./dist/github/diff.cjs"
    },
    "./github/pull-requests": {
      "types": "./dist/github/pull-requests.d.ts",
      "import": "./dist/github/pull-requests.js",
      "require": "./dist/github/pull-requests.cjs"
    },
    "./github/repo-parser": {
      "types": "./dist/github/repo-parser.d.ts",
      "import": "./dist/github/repo-parser.js",
      "require": "./dist/github/repo-parser.cjs"
    },
    "./github/types": {
      "types": "./dist/github/types.d.ts",
      "import": "./dist/github/types.js",
      "require": "./dist/github/types.cjs"
    }
  },
  "description": "Nyron CLI â€” smarter multi-package versioning powered by Bun",
  "keywords": ["nyron", "cli", "bun", "versioning", "monorepo"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/erebus-sh/nyron"
  },
  "author": "#V0ID"
}
